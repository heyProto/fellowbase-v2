<div class="ui sixteen grid">
  <div class="sixteen wide column fellow-column-without-bottom-padding">
    <%= render partial: 'admins/header' %>
  </div>
  <div class="sixteen wide column fellow-column-without-top-padding">
    <table class="ui celled selectable table">
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Email</th>
          <th>Created at</th>
        </tr>
      </thead>
      <tbody>
        <% @fellows.each do |fellow| %>
          <tr>
            <td><%= link_to '<i class="trash icon"></i>'.html_safe, admin_fellow_path(fellow), method: :delete, data: {confirm: "Are you sure?"} %></td>
            <td><%= best_in_place fellow, :name, url: admin_fellow_path(fellow) %></td>
            <td><%= best_in_place fellow, :email, url: admin_fellow_path(fellow) %></td>
            <td><%= distance_of_time_in_words(fellow.created_at, Time.now) + " ago"%>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
