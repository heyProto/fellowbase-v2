<div class="ui three column centered grid fellow-top-padding">
  <div class="column">
    <h3><p>Add Fellow</p></h3>

    <%= simple_form_for @fellow, url: admin_fellows_path, method: :post do |f| %>
      <%= f.input :name, placeholder: "Fellow Name", label: '<p class="fellow-lables">Fellow Name</p>'.html_safe, autofocus: true %>
      <%= f.input :email, placeholder: "Fellow email", label: '<p class="fellow-lables">Fellow Email</p>'.html_safe %>
      <%= f.button :submit, "Create Fellow" %>
      <div class="ui basic button" id="cancelEventFormButton"><a>Cancel</a></div>
    <% end %>
  </div>
</div>



