<div class="ui three column centered grid">
  <div class="column fellow-top-padding">

    <h2>Change your password</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.input :password, input_html: {autofocus: true, autocomplete: "off"}, placeholder: "New Password", label: '<p class="fellow-lables">New Password</p>'.html_safe %>
      <%= f.input :password_confirmation, label: "Confirm new password", autocomplete: "off", placeholder: "Confirm new Password", label: '<p class="fellow-lables">Confirm new Password</p>'.html_safe %>
      <%= f.button :submit, "Change my password", class: 'ui button' %><br><br>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
