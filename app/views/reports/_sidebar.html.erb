<div class="ui sixteen grid">
  <div class="four wide column fellow-top-padding">
    <%= search_form_for q, url: digital_asset_search_path, html: { method: :get, class: "ui form" } do |f| %>
      <h3>Search</h3>
      <%= f.search_field :asset_cont, class: "content-asset-search", placeholder: "Asset Contains", required: true %><br><br>
      <%= f.submit "Search", class: "ui button" %>
      <% if action_name == 'search' %>
        <%= link_to "Reset", all_digital_asset_path, class: 'clear-search' %>
      <% end %>
    <% end %>
  </div>

  <div class="twelve wide column fellow-top-padding">
    <div class="page-title" style="margin-left: 15px;">Show</div>
    <ul class="nav nav-pills nav-stacked">
      <li class="<%= action_name == 'all' ? 'active' : nil %>">
        <a href=<%= all_digital_asset_path %>> All</a>
      </li>
      <li class="<%= action_name == 'errored' ? 'active' : nil %>">
        <a href=<%= errored_digital_asset_path %>> Errored <span class="indication-dot indication-dot-red"></span></a>
      </li>
      <li class="<%= action_name == 'successful' ? 'active' : nil %>">
        <a href=<%= successful_digital_asset_path %>> Successful <span class="indication-dot indication-dot-green"></span></a>
      </li>
      <li class="<%= action_name == 'with_no_data' ? 'active' : nil %>">
        <a href=<%= digital_asset_with_no_data_path %>>With no data <span class="indication-dot indication-dot-grey"></span></a>
      </li>
    </ul>
  </div>
</div>
